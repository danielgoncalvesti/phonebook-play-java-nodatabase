# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                         controllers.HomeController.index
GET     /contatos                 controllers.ContatoCRUD.list(filter ?= "")
GET     /contatos/new             controllers.ContatoCRUD.add
GET     /contatos/:id             controllers.ContatoCRUD.edit(id: Long)
GET     /sobre                    controllers.HomeController.sobre


POST    /contatos/:id/remove      controllers.ContatoCRUD.doRemove(id: Long)
POST    /contatos/novo            controllers.ContatoCRUD.doNovo
POST    /contatos/edit            controllers.ContatoCRUD.doEdit


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
